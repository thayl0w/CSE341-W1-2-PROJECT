{
  "swagger": "2.0",
  "info": {
    "title": "Contacts API",
    "description": "A simple API to manage contacts",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http", "https"],
  "paths": {
    "/": {
      "get": {
        "tags": ["Hello World"],
        "description": "Returns Hello World message",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Hello World response"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["Users"],
        "description": "Get all contacts",
        "produces": ["application/json"],
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "tags": ["Users"],
        "description": "Create a new contact",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "example": "any" },
                "lastName": { "example": "any" },
                "email": { "example": "any" },
                "favoriteColor": { "example": "any" },
                "birthday": { "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["Users"],
        "description": "Get a contact by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "tags": ["Users"],
        "description": "Update a contact",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "example": "any" },
                "lastName": { "example": "any" },
                "email": { "example": "any" },
                "favoriteColor": { "example": "any" },
                "birthday": { "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "tags": ["Users"],
        "description": "Delete a contact",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  }
}
